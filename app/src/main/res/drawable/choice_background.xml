<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:nsdroid="http://schemas.android.com/apk/res-auto">
    <item android:state_pressed="true"
          android:drawable="@drawable/choice_background_pressed" /> <!-- pressed -->
    <item android:state_focused="true"
          android:drawable="@drawable/choice_background_focused" /> <!-- focused -->
    <item android:state_selected="true"
          android:drawable="@drawable/choice_background_pressed" /> <!-- selected -->
    <item nsdroid:state_dismissed="true"
          android:drawable="@drawable/choice_background_disabled" /> <!-- dismissed -->
    <item android:drawable="@drawable/choice_background_normal" /> <!-- default -->
</selector>
